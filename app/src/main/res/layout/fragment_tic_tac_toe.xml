<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTacToe">

    <ImageView
        android:id="@+id/GridTicTacToe"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:src="@drawable/ultimate_tic_tac_toe12_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <ImageView
        android:id="@+id/imgHangman"
        android:layout_width="50dp"
        android:tooltipText="Hangman"
        android:layout_height="50dp"
        android:src="@drawable/hangman"
        app:layout_constraintEnd_toStartOf="@+id/imgScore"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tooltipText="MainMenu"
        android:src="@drawable/_11645_home_512x512"
        app:layout_constraintEnd_toStartOf="@+id/imgHangman"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgScore"
        android:layout_width="50dp"
        android:tooltipText="ScoreBoard"
        android:layout_height="50dp"
        android:src="@drawable/asset_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="@+id/GridTicTacToe"
        app:layout_constraintEnd_toEndOf="@+id/GridTicTacToe"
        app:layout_constraintStart_toStartOf="@+id/GridTicTacToe"
        app:layout_constraintTop_toTopOf="@+id/GridTicTacToe"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/txt_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHome"
        app:layout_constraintVertical_bias="0.13999999" />

    <ImageView
        android:id="@+id/img_top_mid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toTopOf="@+id/img_center"
        app:layout_constraintEnd_toEndOf="@+id/GridTicTacToe"
        app:layout_constraintStart_toStartOf="@+id/GridTicTacToe"
        app:layout_constraintTop_toTopOf="@+id/GridTicTacToe" />

    <ImageView
        android:id="@+id/img_mid_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="@+id/GridTicTacToe"
        app:layout_constraintEnd_toStartOf="@+id/img_center"
        app:layout_constraintStart_toStartOf="@+id/GridTicTacToe"
        app:layout_constraintTop_toTopOf="@+id/GridTicTacToe" />

    <ImageView
        android:id="@+id/img_mid_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="@+id/GridTicTacToe"
        app:layout_constraintEnd_toEndOf="@+id/GridTicTacToe"
        app:layout_constraintStart_toEndOf="@+id/img_center"
        app:layout_constraintTop_toTopOf="@+id/GridTicTacToe" />

    <ImageView
        android:id="@+id/img_bot_mid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="@+id/GridTicTacToe"
        app:layout_constraintEnd_toEndOf="@+id/GridTicTacToe"
        app:layout_constraintStart_toStartOf="@+id/GridTicTacToe"
        app:layout_constraintTop_toBottomOf="@+id/img_center" />

    <ImageView
        android:id="@+id/img_top_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toTopOf="@+id/img_mid_left"
        app:layout_constraintEnd_toStartOf="@+id/img_top_mid"
        app:layout_constraintStart_toStartOf="@+id/GridTicTacToe"
        app:layout_constraintTop_toTopOf="@+id/GridTicTacToe" />

    <ImageView
        android:id="@+id/img_top_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toTopOf="@+id/img_mid_right"
        app:layout_constraintEnd_toEndOf="@+id/GridTicTacToe"
        app:layout_constraintStart_toEndOf="@+id/img_top_mid"
        app:layout_constraintTop_toTopOf="@+id/GridTicTacToe" />

    <ImageView
        android:id="@+id/img_bot_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="@+id/GridTicTacToe"
        app:layout_constraintEnd_toStartOf="@+id/img_bot_mid"
        app:layout_constraintStart_toStartOf="@+id/GridTicTacToe"
        app:layout_constraintTop_toBottomOf="@+id/img_mid_left" />

    <ImageView
        android:id="@+id/img_bot_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="@+id/GridTicTacToe"
        app:layout_constraintEnd_toEndOf="@+id/GridTicTacToe"
        app:layout_constraintStart_toEndOf="@+id/img_bot_mid"
        app:layout_constraintTop_toBottomOf="@+id/img_mid_right" />

</androidx.constraintlayout.widget.ConstraintLayout>